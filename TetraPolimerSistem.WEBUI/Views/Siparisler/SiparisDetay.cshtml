@model List<OrderVM>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detay Sayfası</title>
    <script src="https://kit.fontawesome.com/67c66657c7.js"></script>
    <link rel="stylesheet" href="~/css/SiparisDetay.css">
</head>

<div id="container">
    <button id="btn1"><a href="~/Siparisler/SiparisEkleme">Sipariş Ekle</a></button>
    <br />
    <div id="card">
        <table id="tables">
            <thead>
            <th>Proforma Numarası</th>
            <th>Sipariş Tarihi</th>
            <th>Sevk Tarihi</th>
            <th>Sipariş Veren</th>
            <th>Sipariş Alan</th>
            <th>Birim Fiyat</th>
            <th>Ürün Tonaj</th>
            <th>Ürün Adı</th>
            <th>Sevk Durumu</th>

            </thead>
            <div id="card">
            <tbody>
                    @foreach (OrderVM orderVM in Model)
                    {
                    <tr>
                        <td>@orderVM.ProformaNumara</td>
                        <td>@orderVM.SiparisTarihi.Date</td>
                        <td>@orderVM.SevkTarihi.Date</td>
                        <td>@orderVM.SiparisVerenFirma</td>
                        <td>@orderVM.SiparisAlanFirma</td>
                        <td>@orderVM.BirimFiyat</td>
                        <td>@orderVM.UrunTonaj</td>
                        <td>@orderVM.UrunAdi</td>
                        <td>@orderVM.SevkDurumu</td>
                        <td>@Html.ActionLink("Detay","SiparisDetaylar",new {id=orderVM.Id})</td>
                    </tr>
                    }
            </tbody>
            </div>
            

        </table>
    </div>
</div>



<div class="right-column">
    <img src="" alt="" class="left-column">
</div>
</html>






