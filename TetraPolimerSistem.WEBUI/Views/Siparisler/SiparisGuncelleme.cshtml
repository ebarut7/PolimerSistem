@model OrderVM

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sipariş Ekleme</title>
    <link rel="stylesheet" href="~/css/SiparisGuncelleme.css">
</head>

<body>


    <div class="card-ekleme">
        <h3 class="title">Sipariş Ekleme Sayfası</h3>
        <form class="ekleme-frm" asp-action="SiparisGuncelleme" method="post">

            <label>Proforma Numarası :</label>
            <input type="text" value="@Model.ProformaNumara" name="ProformaNumara">

            <label>Sipariş Veren :</label>
            <input type="text" value="@Model.SiparisVerenFirma" name="SiparisVerenFirma">

            <label>Sipariş Alan :</label>
            <input type="text" value="@Model.SiparisAlanFirma" name="SiparisAlanFirma">

            <label>Sipariş Tarihi :</label>
            <input type="date" value="@Model.SiparisTarihi" name="SiparisTarihi">

            <label>Sevk Tarihi :</label>
            <input type="date" value="@Model.SevkTarihi" name="SevkTarihi">

            <label>Sevkiyat Detay :</label>
            <input type="number" value="@Model.SevkiyatDetayId" name="SevkiyatDetayId">

            <label>Açıklama:</label>
            <input type="text" value="@Model.Aciklama" name="Aciklama" />

            <label>Kur :</label>
            <input type="text" name="Kur" value="@Model.Kur" />

            <label>Döviz Cinsi :</label>
            <select name="DovizCinsi" id="" style="width: 250px; height: 30px;">
                <option value="USD">USD</option>
                <option value="EURO">EURO</option>
                <option value="TL">TRY</option>
            </select>

            <label>Ürün Tonaj :</label>
            <input type="text" name="UrunTonaj" value="@Model.UrunTonaj" />

            <label>Ürün Adı :</label>
            <input type="text" value="@Model.UrunAdi" name="UrunAdi">

            <label>Sevk Durumu :</label>
            <select name="SevkDurumu" id="" style="width: 250px; height: 30px;">
                <option value="Sipariş">Sipariş</option>
                <option value="Yükleme Bekliyor">Yükleme Bekliyor</option>
                <option value="Yolda">Yolda</option>
                <option value="Teslim Edilen">Teslim Edilen</option>

            </select>

            <label>Birim Fiyat :</label>
            <input type="text" value="@Model.BirimFiyat" name="BirimFiyat" />

            <label>Nakliye Tutar :</label>
            <input type="text" value="@Model.NakliyeTutar" name="NakliyeTutar" />

            <label>KDV :</label>
            <input type="text" value="@Model.KDV"  name="KDV" />
            <br>

            <button class="button">Gönder</button>

        </form>
    </div>

</body>

</html>